{
	"name": "react-typescript-starter",
	"description": "A React & Typescript starter bundled with Parcel",
	"version": "1.0.0",
	"main": "src/index.tsx",
	"license": "MIT",
	"dependencies": {
		"react": "^16.8.6",
		"react-dom": "^16.8.6"
	},
	"devDependencies": {
		"@babel/core": "^7.4.5",
		"@babel/preset-react": "^7.0.0",
		"@types/enzyme": "^3.9.4",
		"@types/enzyme-adapter-react-16": "^1.0.5",
		"@types/jest": "^24.0.15",
		"@types/prettier": "^1.16.4",
		"@types/react": "^16.8.22",
		"@types/react-dom": "^16.8.4",
		"babel-jest": "^24.8.0",
		"concurrently": "^4.1.0",
		"enzyme": "^3.10.0",
		"enzyme-adapter-react-16": "^1.14.0",
		"enzyme-to-json": "^3.3.5",
		"husky": "^2.4.1",
		"jest": "^24.8.0",
		"lint-staged": "^8.2.1",
		"node-sass": "^4.12.0",
		"parcel-bundler": "^1.12.3",
		"prettier": "^1.18.2",
		"source-map-explorer": "^2.0.1",
		"ts-jest": "^24.0.2",
		"typescript": "^3.5.2"
	},
	"scripts": {
		"start": "concurrently \"tsc --noEmit --watch\" \"parcel --out-dir build index.html\"",
		"build": "parcel --out-dir build build index.html",
		"test": "jest",
		"prettier": "prettier --write src/**/*.{js,jsx,ts,tsx,scss,css}",
		"analyze": "source-map-explorer dist/*"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"src/**/*.{js,jsx,ts,tsx,scss,css}": [
				"prettier --write",
				"git add"
			],
			"package.json": [
				"prettier --write",
				"git add"
			],
			"*.md": [
				"prettier --write",
				"git add"
			]
		},
		"ignore": ["node_modules", "build", ".cache", "package-lock.json", "yarn.lock"]
	}
}
